<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mvvm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@drawable/logozune"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.dashboard.DashboardActivity"/>
        <activity android:name=".ui.category.CategoryActivity" />
        <activity android:name=".ui.order.OrderActivity" />
        <activity android:name=".ui.order.orderdetail.OrderDetailActivity" />
        <activity android:name=".ui.customer.CustomerActivity"/>
        <activity android:name=".ui.customer.ctmdetail.CustomerDetailActivity"/>
        <activity android:name=".ui.product.ListProductActivity"/>
        <activity android:name=".ui.product.add.AddProductActivity"/>
        <activity android:name=".ui.product.edit.EditProductActivity"/>
        <activity android:name=".ui.product.sale.SaleActivity"/>
    </application>

</manifest>