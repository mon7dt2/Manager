<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/ctn_imgProduct"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgProduct"
            android:src="@drawable/demoproduct"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ctn_imgProduct"
        android:id="@+id/txtNameProduct"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100,000Ä‘"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        android:paddingRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txtPriceProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/ctn_imgProduct"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/txtSize"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtSize"
        android:id="@+id/txtSizeProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textSize="17sp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/txtQuantity" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>